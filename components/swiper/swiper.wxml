<!--components/swiper/swiper.wxml-->
<swiper class="swiper"
        circular
        autoplay
        interval='3000'
        indicator-dots
        indicator-active-color='#ff5777'>
  <block wx:for="{{ list }}" wx:key="index">
    <swiper-item class="switch-item">
      <image class="switch-img" src="{{item.image}}" mode="widthFix"/>
    </swiper-item>
  </block>
</swiper>
